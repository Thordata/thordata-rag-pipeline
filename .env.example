# Thordata Credentials
THORDATA_SCRAPER_TOKEN=
THORDATA_PUBLIC_TOKEN=
THORDATA_PUBLIC_KEY=

# LLM Configuration
# For SiliconFlow (硅基流动): https://api.siliconflow.cn/v1
# For OpenAI: https://api.openai.com/v1
# For DeepSeek: https://api.deepseek.com/v1
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
# Set to "auto" for automatic model detection based on API_BASE
# SiliconFlow free models: Qwen/Qwen2.5-7B-Instruct (recommended), Qwen/Qwen2.5-14B-Instruct
OPENAI_MODEL=auto
OPENAI_EMBEDDING_MODEL=auto
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=2000

# Vector Store Configuration
DB_PATH=./data/chroma_db
COLLECTION_NAME=thordata_rag
# Optimized for SiliconFlow embedding API (512 token limit per input)
CHUNK_SIZE=400
CHUNK_OVERLAP=50

# Scraping Configuration
SCRAPING_TIMEOUT=60
SCRAPING_MAX_RETRIES=3
ENABLE_JS_RENDER=true
DEFAULT_COUNTRY=

# Performance and Caching
ENABLE_CACHE=true
CACHE_TTL=3600
MAX_CONTENT_LENGTH=50000

# Logging
LOG_LEVEL=INFO
